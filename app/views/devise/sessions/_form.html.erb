 
<div id="form" class="nav pull-right" style="margin-top:21px;">

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

 <table> 
  <tr>
    <td>
      <%= f.email_field :email, :autofocus => true,:placeholder=>:email %>
    </td>  
    <td style="padding-left: 8px;">
      <%= f.password_field :password,:placeholder=>:password %>
      <%= link_to '<i class="icon-question-sign"></i>'.html_safe, new_password_path(resource_name),:class=>"button",:title=>"Forgot Password?" %>
    </td>
     <%= image_tag 'cross1.png',:style=>"width: 17px; max-height: 15px ! important; margin-top: -16px; margin-right: 15px;" ,:class=>"close"%>
      <td style="padding: 4px;">
      <%= f.submit "Sign in" ,:class=>"btn btn-primary", :style=>"width: 65px; margin: -3px 3px 3px; padding: 8px;"%>

    </td>
  </tr>

</table>
<% end %>


<%#= render "devise/shared/links" %>
</div>
<script>
$(document).ready(function() {

$(".close").click(function(){

$('#form').hide();
$("#login").show();
});

});

</script>